<% layout("/layouts/boilerplate.ejs") %>

<div class="row">
    <div class="col-8 offset-3 mt-3">

    <h3 class="card-title mt-2"><%= listing.title %></h3>
</div>
    <div class="card col-6 offset-3 mt-3 show-card">
        <img src="<%= listing.image%>" class="card-img-top show-img" alt="listing_image">
  <div class="card-body">
    <p>
        <%= listing.description %> <br>
        &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
        <%= listing.location %> <br>
        <%= listing.country %> <br>
    </p>
  </div>
    </div>
    <br>   
</div>


    <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark mb-3 col-1 offset-3" >Edit</a>   
               
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" >
        <button class="btn btn-dark add-btn mb-3 offset-5">Delete</button>
        </form>
    </div>

    <div class="col-8 offset-3 mb-3 mt-3">
        <hr>
        <h4>Leave a Review</h4>
        <form action="/listings/<%= listing.id %>/reviews" method="POST">
            <div class="mb-3 mt-3">
                <label for="rating" >Rating</label>
                <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" >
            </div>
            <div class="mb-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"></textarea>
            </div>
            <button class="btn btn-dark mt-1">Submit</button>
        </form>
    </div>